      </div>
      <div class='form-group pr-sm-3'>
        <%= f.label :bath_gteq, "Baths", class: 'navbar-text pr-sm-1' %>
        <%= f.select :bath_gteq, (1..5) %>
      </div>
      <div class='form-group'>
        <%= f.submit "Search", class: 'btn btn-danger' %>
      </div>
    <% end %>
