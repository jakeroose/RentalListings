<div class='listing-search row'>
  <div class="col-12">
    <%= search_form_for @search, class: 'form-inline float-right', remote: true do |f| %>
      <!-- Searches addresses. Move to nav bar or remove -->
      <!-- <div class="col">
        <div class='form-group'>
          <%= f.label :address_cont, "Search for Listing", class: 'sr-only' %>
          <%= f.text_field :address_cont, placeholder: 'Search', class: 'form-control' %>
        </div>
      </div> -->
      <div class='form-group pr-sm-3'>
        <%= f.label :max_price_gteq, "Price Range", class: 'navbar-text pr-sm-2' %>
        <%= f.text_field :max_price_gteq, placeholder: 'Min', class: 'form-control' %>
        <%= f.text_field :max_price_lteq, placeholder: 'Max', class: 'form-control' %>
