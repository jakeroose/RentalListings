<!DOCTYPE html>
<html>
<head>
  <title>Rental Listings</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class='navbar navbar-inverse'>
    <div class='container'>
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to "Clemson Rentals", root_path, class: 'navbar-brand' %>
      </div>
      <div class='collapse navbar-collapse' id='bs-example-navbar-collapse-1'>
        <ul class='nav navbar-nav navbar-left'>
          <li class='<%= 'active' if current_page?(root_path)%>'><%= link_to "All Listings", root_path %></li>
          <li class='<%= 'active' if current_page?(about_path)%>'><%= link_to "About", about_path %></li>
          <li class='<%= 'active' if current_page?(policies_path)%>'><%= link_to "Policies", policies_path %></li>
          <li class='<%= 'active' if current_page?(utilities_path)%>'><%= link_to "Utilities", utilities_path %></li>
          <li class='<%= 'active' if current_page?(contact_path)%>'><%= link_to "Contact", contact_path %></li>
        </ul>
        <ul class='nav navbar-nav navbar-right'>
          <% if user_signed_in? %>
            <li class='drowdown'>
              <button class="dropdown-toggle btn btn-info" type="button" id="dropdownMenu1"
                data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                My Account
                <span class='caret'></span>
              </button>
              <ul class='dropdown-menu'>
                <li><%= link_to "My Profile", profile_path(current_user) %></li>
                <li><%= link_to "Account Settings", edit_user_registration_path %></li>
                <li role='separator' class='divider'></li>
                <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
              </ul>
          <% else %>
              <li><%= link_to "Sign Up", new_user_registration_path %></li>
              <li><%= link_to "Log In", new_user_session_path %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>

  <div class="container">

    <div class="">
      <% if notice %><p class="alert alert-notice"><%= notice %></p><% end %>
      <% if alert %><p class="alert alert-warning"><%= alert %></p><% end %>
      <%= yield %>
    </div>
  </div>

</body>
</html>
